  {{! TOC }}
  {{#*inline "tocentry"}}
  <p><a href="#{{id}}">{{title}}</a></p>
  {{/inline}}

  <section class="page toc">
    <div class="bookmark">Table Of Content</div>

    <h3 class="h">Module 1</h3>
    {{#each lessons.m1}}{{>tocentry}}{{/each}}

    <h3 class="h">Module 2</h3>
